@using EntityLayer
@model Product

<div class="col-md-4">
    <div class="card mb-3">
        <img src="/img/@Model.ImageUrl" alt="@Model.Name"/>
        <div card-body>
            <h4 class="card-title">
            <a href="#">@Model.Name</a>
            </h4>
            <small class="text-muted">

                <i class="fa fa-try" aria-hidden="true"></i>@Model.Price
            </small>
        </div>
        <div class="card-footer text-center">
            <a asp-controller="Shop"asp-action="Details"asp-route-id="@Model.Id" class="btn btn-primary btn-sm ">Detay</a>
             @if(User.Identity.IsAuthenticated){
                  <a asp-controller="Cart"asp-action="AddToCart"asp-route-id="@Model.Id" class="btn btn-primary btn-sm ">Sepete Ekle</a>
            }
           
        </div>

    </div>

</div>
