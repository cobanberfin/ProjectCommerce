 @model ProductListModel
@{
    ViewData["Title"] = "Index";
  
}

<h2>Admin Product</h2>
<hr />
 <p>
    <a asp-action="AddProduct" class="btn btn-success"> Yeni Ürün Ekle</a>
</p>
@if (Model.Products.Count() > 0)
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Image</th>
                <th>Name</th>
                <th>Price</th>
                <th style="width:150px"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Products)
            {

                <tr>
                    <td>@item.Id</td>

                    <td>
                        <img src="~/img/@item.ImageUrl" width="80" />
                    </td>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                    <td>
                        
                        <a class="btn btn-primary btn-sm mr-2 " href="/admin/EditProduct/@item.Id">Düzenle</a>

                       
                        <form action="/admin/DeleteProduct" method="post" style="display:inline">
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit" class="btn btn-danger btn-sm">Sil</button>
                        </form>

                    </td>
                </tr>



            }



        </tbody>


    </table>
}
else
{
    <div class="alert alert-warning">

        <h4>Ürün Bulunamadı</h4>
    </div>
}




